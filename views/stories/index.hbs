<h1>Stories</h1>  
<div class="row">
    {{#each stories}}
    <div class="col s12 m4">
        <div class="card">
            <div class="card-image">
                {{{editIcon user ../user}}}              {{!--  Here. 1st 'user' is the that particular stories user, & 2nd user' is the logged-in user, & '_id' is the 'story_id' --}}
            </div>
            <div class="card-content center-align">
                <p>{{stripTags (truncate body 150)}}</p>     {{!-- 150 means in 'dashboard' or 'public stories',any story no matter how much large it is but it only shows maximum first 150 characters or less --}}
                <h5>{{title}}</h5>
                <br>
                <div class="chip">
                    <img src="{{user.image}}" alt="">
                    <a href="/stories/user/{{user._id}}">{{user.displayName}}</a>
                </div>
            </div>
            <div class="card-action center-align">
                <a href="/stories/{{_id}}" class="btn grey">Read More</a>
            </div>
        </div>
    </div>
    {{else}}
    <p>No stories to display</p>
    {{/each}}
</div>